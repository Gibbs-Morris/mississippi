@* CascadingRefractionProvider - provides theme, motion, and focus context to Refraction components *@

<CascadingValue Value="@ReducedMotion" Name="RefractionReducedMotion">
    @ChildContent
</CascadingValue>

@code {

    /// <summary>Gets or sets the child content to wrap with Refraction context.</summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>Gets or sets whether reduced motion is preferred.</summary>
    /// <remarks>
    ///     When true, components should minimize animations and transitions.
    ///     Typically derived from the user's system preference (prefers-reduced-motion).
    /// </remarks>
    [Parameter]
    public bool ReducedMotion { get; set; }

}