@using Mississippi.Refraction.Components.Molecules.MisCheckboxActions
@namespace Mississippi.Refraction.Components.Molecules

<input class="@CssClass"
       id="@Model.Id"
       name="@Model.Name"
       type="checkbox"
       value="@Model.Value"
       @bind:get="Model.IsChecked"
       @bind:set="OnCheckedChangedAsync"
       aria-label="@Model.AriaLabel"
       title="@Model.Title"
       disabled="@Model.IsDisabled"
       required="@Model.IsRequired"
       @onfocus="@(() => DispatchActionAsync(new MisCheckboxFocusedAction(Model.IntentId)))"
       @onblur="@(() => DispatchActionAsync(new MisCheckboxBlurredAction(Model.IntentId)))"
       @onkeydown="@(args => DispatchActionAsync(new MisCheckboxKeyDownAction(Model.IntentId, args.Key, args.Code, args.Repeat, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onkeyup="@(args => DispatchActionAsync(new MisCheckboxKeyUpAction(Model.IntentId, args.Key, args.Code, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onmousedown="@(args => DispatchActionAsync(new MisCheckboxPointerDownAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onmouseup="@(args => DispatchActionAsync(new MisCheckboxPointerUpAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @attributes="AdditionalAttributes"/>