@namespace Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisPasswordInputActions

<div class="@ContainerCssClass">
    <input class="@InputCssClass"
           id="@Model.Id"
           name="@Model.Name"
           type="@InputType"
           value="@Model.Value"
           placeholder="@Model.Placeholder"
           aria-label="@Model.AriaLabel"
           title="@Model.Title"
           autocomplete="@Model.AutoComplete"
           disabled="@Model.IsDisabled"
           readonly="@Model.IsReadOnly"
           @onfocus="@(() => DispatchActionAsync(new MisPasswordInputFocusedAction(Model.IntentId)))"
           @onblur="@(() => DispatchActionAsync(new MisPasswordInputBlurredAction(Model.IntentId)))"
           @oninput="@((ChangeEventArgs args) => DispatchActionAsync(new MisPasswordInputInputAction(Model.IntentId, args.Value?.ToString() ?? string.Empty)))"
           @onchange="@((ChangeEventArgs args) => DispatchActionAsync(new MisPasswordInputChangedAction(Model.IntentId, args.Value?.ToString() ?? string.Empty)))"
           @attributes="AdditionalAttributes" />

    <button type="button"
            class="mis-password-input__toggle"
            tabindex="-1"
            disabled="@Model.IsDisabled"
            aria-label="@ToggleAriaLabel"
            @onclick="@(() => DispatchActionAsync(new MisPasswordInputToggleVisibilityAction(Model.IntentId, !Model.IsPasswordVisible)))">
        @if (Model.IsPasswordVisible)
        {
            <svg class="mis-password-input__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                <line x1="1" y1="1" x2="23" y2="23"></line>
            </svg>
        }
        else
        {
            <svg class="mis-password-input__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
            </svg>
        }
    </button>
</div>
