@namespace Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisButtonActions
@using Microsoft.AspNetCore.Components.Web

<button class="@CssClass"
        type="@ButtonType"
        disabled="@Model.IsDisabled"
        aria-label="@Model.AriaLabel"
        title="@Model.Title"
        @onclick="@((MouseEventArgs args) => DispatchActionAsync(new MisButtonClickedAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
        @onmousedown="@((MouseEventArgs args) => DispatchActionAsync(new MisButtonPointerDownAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
        @onmouseup="@((MouseEventArgs args) => DispatchActionAsync(new MisButtonPointerUpAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
        @onfocus="@(() => DispatchActionAsync(new MisButtonFocusedAction(Model.IntentId)))"
        @onblur="@(() => DispatchActionAsync(new MisButtonBlurredAction(Model.IntentId)))"
        @onkeydown="@((KeyboardEventArgs args) => DispatchActionAsync(new MisButtonKeyDownAction(Model.IntentId, args.Key, args.Code, args.Repeat, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
        @onkeyup="@((KeyboardEventArgs args) => DispatchActionAsync(new MisButtonKeyUpAction(Model.IntentId, args.Key, args.Code, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
        @attributes="AdditionalAttributes">
    @ChildContent
</button>
