@namespace Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisTextInputActions
@using Microsoft.AspNetCore.Components.Web

<input class="@CssClass"
       id="@Model.Id"
       name="@Model.Name"
       type="@InputType"
       value="@Model.Value"
       placeholder="@Model.Placeholder"
       aria-label="@Model.AriaLabel"
       title="@Model.Title"
       autocomplete="@Model.AutoComplete"
       disabled="@Model.IsDisabled"
       readonly="@Model.IsReadOnly"
       @onfocus="@(() => DispatchActionAsync(new MisTextInputFocusedAction(Model.IntentId)))"
       @onblur="@(() => DispatchActionAsync(new MisTextInputBlurredAction(Model.IntentId)))"
       @onkeydown="@((KeyboardEventArgs args) => DispatchActionAsync(new MisTextInputKeyDownAction(Model.IntentId, args.Key, args.Code, args.Repeat, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onkeyup="@((KeyboardEventArgs args) => DispatchActionAsync(new MisTextInputKeyUpAction(Model.IntentId, args.Key, args.Code, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onmousedown="@((MouseEventArgs args) => DispatchActionAsync(new MisTextInputPointerDownAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @onmouseup="@((MouseEventArgs args) => DispatchActionAsync(new MisTextInputPointerUpAction(Model.IntentId, args.Button, args.CtrlKey, args.ShiftKey, args.AltKey, args.MetaKey)))"
       @oninput="@((ChangeEventArgs args) => DispatchActionAsync(new MisTextInputInputAction(Model.IntentId, args.Value?.ToString() ?? string.Empty)))"
       @onchange="@((ChangeEventArgs args) => DispatchActionAsync(new MisTextInputChangedAction(Model.IntentId, args.Value?.ToString() ?? string.Empty)))"
       @attributes="AdditionalAttributes" />