@* ProgressArc - arc-based progress indicator *@

<div class="rf-progress-arc"
     role="progressbar"
     data-state="@State"
     aria-valuenow="@Value"
     aria-valuemin="@Min"
     aria-valuemax="@Max"
     @attributes="AdditionalAttributes">
    <svg viewBox="0 0 36 36" class="rf-progress-arc__svg">
        <circle class="rf-progress-arc__track" cx="18" cy="18" r="16"/>
        <circle class="rf-progress-arc__fill" cx="18" cy="18" r="16"/>
    </svg>
</div>