@* SmokeConfirm - destructive action confirmation dialog *@

<div class="rf-smoke-confirm"
     role="@RefractionAriaRoles.Dialog"
     data-state="@State"
     aria-labelledby="@TitleId"
     @attributes="AdditionalAttributes">
    <div class="rf-smoke-confirm__veil"></div>
    <div class="rf-smoke-confirm__pane">
        @if (!string.IsNullOrEmpty(Title))
        {
            <h2 id="@TitleId" class="rf-smoke-confirm__title">@Title</h2>
        }
        @if (!string.IsNullOrEmpty(Consequence))
        {
            <p class="rf-smoke-confirm__consequence">@Consequence</p>
        }
        <div class="rf-smoke-confirm__actions">
            <button class="rf-smoke-confirm__cancel" @onclick="OnCancel">@CancelText</button>
            <button class="rf-smoke-confirm__confirm" @onclick="OnConfirm">@ConfirmText</button>
        </div>
    </div>
</div>