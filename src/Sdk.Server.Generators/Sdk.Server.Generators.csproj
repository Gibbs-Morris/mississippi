<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>14.0</LangVersion>
        <ImplicitUsings>false</ImplicitUsings>
        <IsRoslynComponent>true</IsRoslynComponent>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <Description>Source generators for Mississippi server applications. Generates API controllers and service registrations from projection definitions.</Description>
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="..\Sdk.Generators.Abstractions\Sdk.Generators.Abstractions.csproj" />
    </ItemGroup>
    <ItemGroup>
        <!-- Include shared generator utilities as source to avoid assembly loading issues -->
        <Compile Include="..\Sdk.Generators.Core\Analysis\*.cs" Link="Core\Analysis\%(Filename)%(Extension)" />
        <Compile Include="..\Sdk.Generators.Core\Emit\*.cs" Link="Core\Emit\%(Filename)%(Extension)" />
        <Compile Include="..\Sdk.Generators.Core\Naming\*.cs" Link="Core\Naming\%(Filename)%(Extension)" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" />
    </ItemGroup>
</Project>
