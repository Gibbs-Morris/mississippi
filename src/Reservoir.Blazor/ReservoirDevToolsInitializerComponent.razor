@implements IAsyncDisposable
@inject ReduxDevToolsService DevToolsService

@code {

    /// <inheritdoc />
    protected override void OnAfterRender(
        bool firstRender
    )
    {
        if (firstRender)
        {
            DevToolsService.Initialize();
        }
    }

    /// <inheritdoc />
    public async ValueTask DisposeAsync()
    {
        DevToolsService.Stop();
        await DevToolsService.DisposeAsync();
    }

}