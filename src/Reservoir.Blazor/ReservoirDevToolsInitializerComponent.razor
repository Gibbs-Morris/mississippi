@implements IDisposable
@inject ReduxDevToolsService DevToolsService

@code {

    /// <inheritdoc />
    protected override void OnAfterRender(
        bool firstRender
    )
    {
        if (firstRender)
        {
            DevToolsService.Initialize();
        }
    }

    /// <inheritdoc />
    public void Dispose() => DevToolsService.Stop();

}