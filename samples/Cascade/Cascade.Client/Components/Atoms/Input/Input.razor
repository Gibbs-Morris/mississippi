@* Input - Atomic component for text input fields *@

<div class="input-group">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="input-label" for="@InputId">@Label</label>
    }
    <input id="@InputId"
           type="@Type"
           class="input @(HasError ? "input--error" : "")"
           placeholder="@Placeholder"
           value="@Value"
           disabled="@Disabled"
           @oninput="HandleInputAsync"
           @onkeypress="HandleKeyPressAsync"
           @attributes="AdditionalAttributes"/>
    @if (HasError)
    {
        <span class="input-error" role="alert">@ErrorMessage</span>
    }
</div>