@page "/login"
@rendermode RenderMode.InteractiveServer

<PageTitle>Login - Cascade Chat</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h2 class="mb-0">Welcome to Cascade Chat</h2>
                </div>
                <div class="card-body">
                    <EditForm Model="Model" OnValidSubmit="HandleLoginAsync">
                        <DataAnnotationsValidator/>

                        <div class="mb-3">
                            <label for="displayName" class="form-label">Display Name</label>
                            <InputText id="displayName"
                                       @bind-Value="Model.DisplayName"
                                       class="form-control"
                                       placeholder="Enter your name"
                                       disabled="@isLoading"/>
                            <ValidationMessage For="() => Model.DisplayName" class="text-danger"/>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @errorMessage
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                    <span>Joining...</span>
                                }
                                else
                                {
                                    <span>Join Chat</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>