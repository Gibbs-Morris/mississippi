<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <!-- Do not produce a main entry point; the host app starts us -->
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" />
    <PackageReference Include="Microsoft.Extensions.Http" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cascade.Components\Cascade.Components.csproj" />
    <!-- Note: Ripples.Client references Ripples.Blazor which requires AspNetCore.App -->
    <!-- For now we only reference Ripples.Abstractions for IProjectionCache interface -->
    <ProjectReference Include="..\..\..\src\Ripples.Abstractions\Ripples.Abstractions.csproj" />
  </ItemGroup>

</Project>
