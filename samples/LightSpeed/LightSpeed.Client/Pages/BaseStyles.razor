    <section>
        <h2>Form Controls</h2>
        <form>
            <p>
                <label for="text-input">Text input</label><br />
                <input id="text-input" name="text-input" type="text" placeholder="Type here" />
            </p>

            <p>
                <label for="email-input">Email input</label><br />
                <input id="email-input" name="email-input" type="email" placeholder="name@example.com" />
            </p>

            <p>
                <label for="password-input">Password input</label><br />
                <input id="password-input" name="password-input" type="password" placeholder="Password" />
            </p>

            <p>
                <label for="number-input">Number input</label><br />
                <input id="number-input" name="number-input" type="number" value="5" />
            </p>

            <p>
                <label for="range-input">Range input</label><br />
                <input id="range-input" name="range-input" type="range" min="0" max="100" value="50" />
            </p>

            <p>
                <label for="date-input">Date input</label><br />
                <input id="date-input" name="date-input" type="date" />
            </p>

            <p>
                <label for="select-input">Select</label><br />
                <select id="select-input" name="select-input">
                    <option>Option A</option>
                    <option>Option B</option>
                    <option>Option C</option>
                </select>
            </p>

            <fieldset>
                <legend>Radio group</legend>
                <p>
                    <label>
                        <input type="radio" name="radio-group" value="one" checked />
                        Option one
                    </label>
                </p>
                <p>
                    <label>
                        <input type="radio" name="radio-group" value="two" />
                        Option two
                    </label>
                </p>
            </fieldset>

            <fieldset>
                <legend>Checkboxes</legend>
                <p>
                    <label>
                        <input type="checkbox" name="checkbox-one" checked />
                        Checkbox one
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" name="checkbox-two" />
                        Checkbox two
                    </label>
                </p>
            </fieldset>

            <p>
                <label for="textarea-input">Textarea</label><br />
                <textarea id="textarea-input" name="textarea-input" rows="4">Multiline text</textarea>
            </p>

            <p>
                <button type="button">Button</button>
                <button type="submit">Submit</button>
                <button type="reset">Reset</button>
            </p>
        </form>
    </section>

