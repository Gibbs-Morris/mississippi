@page "/"
@using Mississippi.Reservoir.Blazor.BuiltIn.Navigation.Actions
@inherits StoreComponent

<main>
	<header>
		<h1>Refraction Samples</h1>
		<p>
			A compact launchpad for validating the design system in LightSpeed.
		</p>
	</header>

	<section>
		<h2>Foundations</h2>
		<p>Baseline elements and typography for quick verification.</p>
		<ol>
			<li>
				<button type="button" @onclick="NavigateToBaseStyles">Base styles (HTML controls)</button>
			</li>
		</ol>
	</section>

	<section>
		<h2>Next Steps</h2>
		<p>
			Add more pages here as new Refraction components come online.
		</p>
		<ul>
			<li>Tokens and typography checks</li>
			<li>Atoms and molecules samples</li>
			<li>Organisms and template layouts</li>
		</ul>
	</section>
</main>

@code {
	private void NavigateToBaseStyles()
	{
		Dispatch(new NavigateAction("base-styles"));
	}
}