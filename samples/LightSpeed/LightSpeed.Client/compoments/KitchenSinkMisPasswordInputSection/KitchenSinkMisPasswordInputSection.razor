@namespace LightSpeed.Client.Compoments
@inherits StoreComponent
@using Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisPasswordInputActions
@using Mississippi.Refraction.Components.Molecules.MisSwitchActions
@using Mississippi.Refraction.Components.Molecules.MisTextInputActions
@using Mississippi.Refraction.Components.Molecules.MisSelectActions
@using LightSpeed.Client.Features.KitchenSinkFeatures.MisPasswordInput
@using LightSpeed.Client.Features.KitchenSinkFeatures.SectionUi

<KitchenSinkDemoSection Title="MisPasswordInput"
                        ComponentTag="MisPasswordInput"
                        Description="Password input with built-in visibility toggle."
                        IsEventsOpen="@IsEventsOpen"
                        OnToggleEvents="HandleToggleEvents"
                        EventCount="@PasswordEvents.Count"
                        OnClearEvents="HandleClearEvents">
    <ChildContent>
        <MisPasswordInput Model="@PasswordModel"
                          OnAction="@((IMisPasswordInputAction action) => HandleMisPasswordInputActionAsync(action))" />
    </ChildContent>

    <Properties>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Placeholder</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-placeholder", Value = PasswordModel.Placeholder ?? string.Empty, Placeholder = "Placeholder text" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">AriaLabel</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-arialabel", Value = PasswordModel.AriaLabel ?? string.Empty, Placeholder = "Accessible label" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">CssClass</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-cssclass", Value = PasswordModel.CssClass ?? string.Empty, Placeholder = "Additional CSS class" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">State</span>
            <MisSelect Model="@(new MisSelectViewModel { IntentId = "prop-state", Value = PasswordModel.State.ToString(), Options = PasswordStateOptions })"
                       OnAction="HandlePropertySelectAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">IsDisabled</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-isdisabled", IsChecked = PasswordModel.IsDisabled })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">IsReadOnly</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-isreadonly", IsChecked = PasswordModel.IsReadOnly })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">IsPasswordVisible</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-ispasswordvisible", IsChecked = PasswordModel.IsPasswordVisible })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
    </Properties>
</KitchenSinkDemoSection>
