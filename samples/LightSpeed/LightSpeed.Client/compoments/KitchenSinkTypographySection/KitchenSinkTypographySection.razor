@namespace LightSpeed.Client.Compoments

<KitchenSinkDemoSection Title="Typography"
                        Description="Luminous theme type scale: Rajdhani for headings, Space Grotesk for body, JetBrains Mono for code.">
    <ChildContent>
        <div class="ks-typography-showcase">
            <div class="ks-typography-group">
                <span class="ks-typography-label">Display</span>
                <div class="mis-display">Display — 40px / 300</div>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">H1</span>
                <div class="mis-h1">Heading 1 — 32px / 300</div>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">H2</span>
                <h2 style="margin: 0;">Heading 2 — 24px / 400</h2>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">H3</span>
                <h3 style="margin: 0;">Heading 3 — 20px / 500</h3>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">Body Large</span>
                <p class="mis-body-lg" style="margin: 0;">Body Large — 17px / 400 (Space Grotesk)</p>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">Body</span>
                <p style="margin: 0;">Body — 16px / 400 (Space Grotesk)</p>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">UI</span>
                <span class="mis-ui">UI Text — 14px / 500</span>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">Caption</span>
                <span class="mis-caption">Caption — 12px / 500</span>
            </div>
            <div class="ks-typography-group">
                <span class="ks-typography-label">Code</span>
                <code>const greeting = "Hello, Luminous!";</code>
            </div>
        </div>
    </ChildContent>
</KitchenSinkDemoSection>
