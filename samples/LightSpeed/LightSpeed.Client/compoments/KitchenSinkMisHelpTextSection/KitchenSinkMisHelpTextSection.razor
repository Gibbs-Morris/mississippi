@namespace LightSpeed.Client.Compoments
@inherits StoreComponent
@using Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisTextInputActions

<KitchenSinkDemoSection Title="MisHelpText"
                        ComponentTag="MisHelpText"
                        Description="Instructional or descriptive text for form fields.">
    <ChildContent>
        <MisHelpText Model="@HelpTextModel">@HelpTextContent</MisHelpText>
    </ChildContent>

    <Properties>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Content</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-content", Value = HelpTextContent, Placeholder = "Help text content" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Id</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-id", Value = HelpTextModel.Id ?? string.Empty, Placeholder = "Element id" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">CssClass</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-cssclass", Value = HelpTextModel.CssClass ?? string.Empty, Placeholder = "Additional CSS class" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
    </Properties>
</KitchenSinkDemoSection>
