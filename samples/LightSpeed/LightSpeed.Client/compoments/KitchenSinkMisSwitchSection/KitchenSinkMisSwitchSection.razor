@namespace LightSpeed.Client.Compoments
@inherits StoreComponent
@using Mississippi.Refraction.Components.Molecules
@using Mississippi.Refraction.Components.Molecules.MisSwitchActions
@using Mississippi.Refraction.Components.Molecules.MisTextInputActions
@using Mississippi.Refraction.Components.Molecules.MisSelectActions

<KitchenSinkDemoSection Title="MisSwitch"
                        ComponentTag="MisSwitch"
                        Description="Toggle switch for binary on/off states with keyboard and pointer support."
                        IsEventsOpen="@IsEventsOpen"
                        OnToggleEvents="HandleToggleEvents"
                        EventCount="@SwitchEvents.Count"
                        OnClearEvents="HandleClearSwitchEvents">
    <ChildContent>
        <MisSwitch Model="@SwitchModel"
                   OnAction="@((IMisSwitchAction action) => HandleMisSwitchActionAsync(action))" />
    </ChildContent>

    <Properties>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Value</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-value", Value = SwitchModel.Value ?? string.Empty, Placeholder = "Switch value" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">IntentId</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-intentid", Value = SwitchModel.IntentId, Placeholder = "Intent identifier" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">AriaLabel</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-arialabel", Value = SwitchModel.AriaLabel ?? string.Empty, Placeholder = "Accessibility label" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Title</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-title", Value = SwitchModel.Title ?? string.Empty, Placeholder = "Tooltip text" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">CssClass</span>
            <MisTextInput Model="@(new MisTextInputViewModel { IntentId = "prop-cssclass", Value = SwitchModel.CssClass ?? string.Empty, Placeholder = "Additional CSS class" })"
                          OnAction="HandlePropertyTextInputAction" />
        </div>
        <div class="ks-prop-row">
            <span class="ks-prop-label">Visual State</span>
            <MisSelect Model="@(new MisSelectViewModel { IntentId = "prop-state", Value = SwitchModel.State.ToString(), Options = SwitchStateOptions })"
                       OnAction="HandlePropertySelectAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">Checked</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-checked", IsChecked = SwitchModel.IsChecked })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">Disabled</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-disabled", IsChecked = SwitchModel.IsDisabled })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
        <div class="ks-prop-row ks-prop-row--toggle">
            <span class="ks-prop-label">Required</span>
            <MisSwitch Model="@(new MisSwitchViewModel { IntentId = "prop-required", IsChecked = SwitchModel.IsRequired })"
                       OnAction="HandlePropertySwitchAction" />
        </div>
    </Properties>

    <Events>
        @if (SwitchEvents.Count == 0)
        {
            <p>No events recorded yet.</p>
        }
        else
        {
            <ul>
                @foreach (string switchEvent in SwitchEvents)
                {
                    <li>@switchEvent</li>
                }
            </ul>
        }
    </Events>
</KitchenSinkDemoSection>
