@namespace Spring.Client.Components.Organisms

<section>
    <h2>Select Account</h2>
    <p>Enter an account identifier to begin banking operations.</p>
    <div>
        <label for="account-id-input">Account Identifier</label>
        <InputText id="account-id-input"
                   type="text"
                   Value="AccountIdInput"
                   ValueChanged="AccountIdInputChanged"
                   ValueExpression="() => AccountIdInput"
                   placeholder="Enter account ID"/>
    </div>
    <button type="button" @onclick="OnContinue">Continue</button>
</section>