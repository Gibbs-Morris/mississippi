@namespace Spring.Client.Components.Organisms

<section>
    <h2>Demo Accounts</h2>
    <p>Initialize two demo accounts to quickly exercise transfers and projections.</p>
    <button type="button" @onclick="OnInitialize" disabled="@IsExecutingOrLoading">
        Initialize demo accounts
    </button>
    @if (IsInitialized)
    {
        <div>
            <div>
                <span>Account A:</span>
                <span>@(AccountAName ?? "Account A")</span>
                <span>@AccountAId</span>
            </div>
            <div>
                <span>Account B:</span>
                <span>@(AccountBName ?? "Account B")</span>
                <span>@AccountBId</span>
            </div>
        </div>
    }
</section>