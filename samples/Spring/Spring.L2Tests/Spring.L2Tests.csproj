<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <!-- Exclude Allure reporting for this integration test project.
         Allure.Xunit crashes when tests fail during IAsyncLifetime.InitializeAsync
         (before the test context is established). -->
    <ExcludeAllure>true</ExcludeAllure>
  </PropertyGroup>

  <!-- Remove Allure.Xunit that was added by Directory.Build.props -->
  <ItemGroup>
    <PackageReference Remove="Allure.Xunit" />
  </ItemGroup>

  <ItemGroup>
    <!-- Aspire Testing Infrastructure -->
    <PackageReference Include="Aspire.Hosting.Testing" />

    <!-- Playwright for E2E browser testing -->
    <PackageReference Include="Microsoft.Playwright" />

    <!-- FluentAssertions for readable assertions -->
    <PackageReference Include="FluentAssertions" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Spring.AppHost\Spring.AppHost.csproj" />
  </ItemGroup>
</Project>
